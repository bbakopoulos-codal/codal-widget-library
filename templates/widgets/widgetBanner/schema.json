{
    "name": "MVP",
    "schema": [{
        "type": "tab",
        "label": "MVP",
        "sections": [
            {
                "label": "Banner Content",
                "settings": [
                    {
                        "type": "select",
                        "label": "Alignment",
                        "id": "alignment",
                        "default": "",
                        "typeMeta": {
                            "selectOptions": [
                                {
                                    "label": "left",
                                    "value": ""
                                },
                                {
                                    "label": "right",
                                    "value": "right"
                                },
                                {
                                    "label": "center",
                                    "value": "center"
                                }
                            ]
                        }
                    },
                    {
                        "type": "select",
                        "label": "Banner Background",
                        "id": "banner-bg",
                        "default": "image",
                        "typeMeta": {
                            "selectOptions": [
                                {
                                    "label": "image",
                                    "value": "image"
                                },
                                {
                                    "label": "color",
                                    "value": "color"
                                }
                            ]
                        }
                    },
                    {
                        "type": "imageManager",
                        "id": "image",
                        "default": {
                            "src": "https://images.unsplash.com/photo-1533038590840-1cde6e668a91?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2000&q=100",
                            "type": "IMAGE_MANAGER"
                        },
                        "conditional": {
                            "key": "banner-bg",
                            "operator": "IN",
                            "value": [
                                "image"
                            ]
                        }
                    },
                    {
                        "type": "input",
                        "label": "Image Description",
                        "id": "image_description",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter image description"
                        },
                        "conditional": {
                            "key": "banner-bg",
                            "operator": "IN",
                            "value": [
                                "image"
                            ]
                        }
                    },
                    {
                        "type": "color",
                        "label": "Background Color",
                        "id": "bg-color",
                        "default": "rgba(0, 0, 255, 1)",
                        "conditional": {
                            "key": "banner-bg",
                            "operator": "IN",
                            "value": [
                                "color"
                            ]
                        }
                    },
                    {
                        "type": "select",
                        "label": "Show Overlay?",
                        "id": "overlay",
                        "default": "",
                        "typeMeta": {
                            "selectOptions": [
                                {
                                    "label": "true",
                                    "value": "overlay"
                                },
                                {
                                    "label": "false",
                                    "value": ""
                                }
                            ]
                        }
                    },
                    {
                        "type": "color",
                        "label": "Overlay Color",
                        "id": "overlay-color",
                        "default": "rgba(0, 0, 0, .6)",
                        "conditional": {
                            "key": "overlay",
                            "operator": "IN",
                            "value": [
                                "overlay"
                            ]
                        }
                    },
                    {
                        "type": "input",
                        "label": "Overlay Direction (in degrees)",
                        "id": "overlay-degrees",
                        "default": "90",
                        "typeMeta": {
                            "placeholder": "enter value, 0-360"
                        },
                        "conditional": {
                            "key": "overlay",
                            "operator": "IN",
                            "value": [
                                "overlay"
                            ]
                        }
                    },
                    {
                        "type": "input",
                        "label": "Overlay Width",
                        "id": "overlay-percent",
                        "default": "50",
                        "typeMeta": {
                            "placeholder": "enter value, 0-100"
                        },
                        "conditional": {
                            "key": "overlay",
                            "operator": "IN",
                            "value": [
                                "overlay"
                            ]
                        }
                    },
                    {
                        "type": "select",
                        "label": "Show Button Arrows?",
                        "id": "show-arrow",
                        "default": "true",
                        "typeMeta": {
                            "selectOptions": [
                                {
                                    "label": "true",
                                    "value": "show-arrow"
                                },
                                {
                                    "label": "false",
                                    "value": ""
                                }
                            ]
                        }
                    },
                    {
                        "type": "input",
                        "label": "Sub Heading Text",
                        "id": "sub_heading",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter text"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Heading Text",
                        "id": "heading",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter text"
                        }
                    },
                    {
                        "type": "color",
                        "label": "Text Color",
                        "id": "text_color",
                        "default": "#FFF"
                    },
                    {
                        "type": "color",
                        "label": "Button Text Color",
                        "id": "button_text_color",
                        "default": "#FFF"
                    },
                    {
                        "type": "color",
                        "label": "Button Text Color (Hover)",
                        "id": "button_text_color_hover",
                        "default": "#000"
                    },
                    {
                        "type": "color",
                        "label": "Button Color",
                        "id": "button_bg_color",
                        "default": "#000"
                    },
                    {
                        "type": "color",
                        "label": "Button Color (Hover)",
                        "id": "button_bg_color_hover",
                        "default": "#000"
                    },
                    {
                        "type": "input",
                        "label": "Button #1 URL",
                        "id": "link_url_1",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter url"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Button #1 Text",
                        "id": "action_text_1",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter text"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Button #2 URL",
                        "id": "link_url_2",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter url"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Button #2 Text",
                        "id": "action_text_2",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter text"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Button #3 URL",
                        "id": "link_url_3",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter url"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Button #3 Text",
                        "id": "action_text_3",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter text"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Button #4 URL",
                        "id": "link_url_4",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter url"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Button #4 Text",
                        "id": "action_text_4",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter text"
                        }
                    }
                ]
            }
        ]
    }],
    "template": " <style> #widgetBanner-{{_.id}} .widgetBanner-subHeading, #widgetBanner-{{_.id}} .widgetBanner-heading { color: {{text_color}}; } #widgetBanner-{{_.id}} .widgetBanner-bg.overlay::before { background: linear-gradient({{overlay-degrees}}deg, {{overlay-color}} {{overlay-percent}}%, transparent 100%); } #widgetBanner-{{_.id}} a.widgetBanner-action { background: {{button_bg_color}}; color: {{button_text_color}}; } #widgetBanner-{{_.id}} a.widgetBanner-action:focus { color: {{button_text_color_hover}}; background-color: {{button_bg_color_hover}}; } #widgetBanner-{{_.id}} a.widgetBanner-action:hover { color: {{button_text_color_hover}}; background-color: {{button_bg_color_hover}}; } #widgetBanner-{{_.id}} a.widgetBanner-action svg { stroke: {{button_text_color}}; } #widgetBanner-{{_.id}} a.widgetBanner-action:hover svg, #widgetBanner-{{_.id}} a.widgetBanner-action:focus svg { stroke: {{button_text_color_hover}}; } </style> <div class='widgetBanner' id='widgetBanner-{{_.id}}'> <div class='widgetBanner-bg {{overlay}}'> <img src='{{image.src}}' alt='{{image_description}}'> </div> <div class='widgetBanner-content {{alignment}} {{show-arrow}}'> <h2 class='widgetBanner-subHeading'>{{sub_heading}}</h2> <h1 class='widgetBanner-heading'>{{heading}}</h1> <ul class='widgetBanner-actionList'> <li class='widgetBanner-actionItem'> <a href='{{action_url_1}}' class='widgetBanner-action'> {{action_text_1}} <svg viewBox='0 0 20 16' fill='none'> <path d='M12 1L19 8M19 8L12 15M19 8L1 8' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/> </svg> </a> </li> <li class='widgetBanner-actionItem'> <a href='{{action_url_2}}' class='widgetBanner-action'> {{action_text_2}} <svg width='' height='' viewBox='0 0 20 16' fill='none'> <path d='M12 1L19 8M19 8L12 15M19 8L1 8' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/> </svg> </a> </li> <li class='widgetBanner-actionItem'> <a href='{{action_url_3}}' class='widgetBanner-action'> {{action_text_3}} <svg width='' height='' viewBox='0 0 20 16' fill='none'> <path d='M12 1L19 8M19 8L12 15M19 8L1 8' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/> </svg> </a> </li> <li class='widgetBanner-actionItem'> <a href='{{action_url_4}}' class='widgetBanner-action'> {{action_text_4}} <svg width='' height='' viewBox='0 0 20 16' fill='none'> <path d='M12 1L19 8M19 8L12 15M19 8L1 8' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/> </svg> </a> </li> </ul> </div> </div> "
}